    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"phone\": \"+923001234567\",\n  \"password\": \"SecurePass123!\",\n  \"role\": \"user\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Register a new user. Password must be at least 8 characters with uppercase, lowercase, number, and special character. Phone format: +923XXXXXXXXX"
          },
          "response": []
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Login with email and password. Can also use phone instead of email. If 2FA is enabled, returns 2fa_required status."
          },
          "response": []
        },
        {
          "name": "Login with Phone",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"+923001234567\",\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Login using phone number instead of email"
          },
          "response": []
        },
        {
          "name": "Verify Email",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/auth/verify-email?email=john.doe@example.com&code=123456",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "verify-email"],
              "query": [
                {
                  "key": "email",
                  "value": "john.doe@example.com"
                },
                {
                  "key": "code",
                  "value": "123456"
                }
              ]
            },
            "description": "Verify email with verification code sent during registration"
          },
          "response": []
        },
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/forgot-password",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "forgot-password"]
            },
            "description": "Request password reset. Sends reset link to email."
          },
          "response": []
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{reset_token}}",
                "description": "Reset token from forgot password email"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"password\": \"NewSecurePass123!\",\n  \"confirmPassword\": \"NewSecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/reset-password",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "reset-password"]
            },
            "description": "Reset password using token from forgot password email. Password must meet requirements."
          },
          "response": []
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/refresh-token",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "refresh-token"]
            },
            "description": "Refresh access token using refresh token. Can also use refreshToken from cookies."
          },
          "response": []
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "profile"]
            },
            "description": "Get current user profile. Requires authentication."
          },
          "response": []
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "logout"]
            },
            "description": "Logout and blacklist current token. Requires authentication."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Two-Factor Authentication",
      "item": [
        {
          "name": "Setup 2FA",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/setup-2fa",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "setup-2fa"]
            },
            "description": "Initiate 2FA setup. Returns QR code and secret. Requires authentication."
          },
          "response": []
        },
        {
          "name": "Verify 2FA Setup",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/verify-2fa-setup",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "verify-2fa-setup"]
            },
            "description": "Verify and activate 2FA with 6-digit token from authenticator app. Requires authentication."
          },
          "response": []
        },
        {
          "name": "Enable 2FA",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/enable-2fa",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "enable-2fa"]
            },
            "description": "Enable 2FA if previously disabled. Requires authentication."
          },
          "response": []
        },
        {
          "name": "Disable 2FA",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/disable-2fa",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "disable-2fa"]
            },
            "description": "Disable 2FA for the account. Requires authentication."
          },
          "response": []
        },
        {
          "name": "Verify 2FA Token (Login)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"token\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/verify-2fa",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "verify-2fa"]
            },
            "description": "Verify 2FA token during login when 2FA is enabled. Use after login returns 2fa_required status."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Get Blocked Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/admin/blocked-users?page=1&limit=10&role=user&search=john",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "blocked-users"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number (default: 1)"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page (default: 10)"
                },
                {
                  "key": "role",
                  "value": "user",
                  "description": "Filter by role (optional)"
                },
                {
                  "key": "search",
                  "value": "john",
                  "description": "Search by name or email (optional)"
                }
              ]
            },
            "description": "Get all blocked users with pagination. Requires admin or superAdmin role."
          },
          "response": []
        },
        {
          "name": "Block User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Violation of terms of service\",\n  \"duration\": 24\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/admin/block-user/:userId",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "block-user", ":userId"],
              "variable": [
                {
                  "key": "userId",
                  "value": "USER_ID_HERE",
                  "description": "User ID to block"
                }
              ]
            },
            "description": "Manually block a user. Duration in hours (default: 24). Requires admin role."
          },
          "response": []
        },
        {
          "name": "Unblock User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/admin/unblock-user/:userId",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "unblock-user", ":userId"],
              "variable": [
                {
                  "key": "userId",
                  "value": "USER_ID_HERE",
                  "description": "User ID to unblock"
                }
              ]
            },
            "description": "Unblock a user. Requires admin role."
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
